<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- OneBusAway Theme -->
    <color name="theme_primary">#4CAF50</color>
    <color name="theme_primary_dark">#388E3C</color>
    <color name="theme_muted">#94CF96</color>
    <color name="theme_accent">#5db53b</color>

    <color name="body_text_1">#de000000</color>
    <color name="body_text_2">#8a000000</color>
    <color name="body_text_3">#60000000</color>
    <color name="body_text_disabled">#44000000</color>

    <color name="body_text_1_inverse">#deffffff</color>
    <color name="body_text_2_inverse">#8affffff</color>

    <!-- Navigation Drawer -->
    <color name="navdrawer_background">@android:color/white</color>
    <color name="navdrawer_text_color">@color/body_text_1</color>
    <color name="navdrawer_text_color_selected">@color/theme_primary</color>
    <color name="navdrawer_background_color_selected">#11000000</color>
    <color name="navdrawer_icon_tint">#888</color>
    <color name="navdrawer_icon_tint_selected">@color/theme_primary</color>

    <!-- ListView background -->
    <color name="listview_background">@android:color/white</color>

    <!-- Default route line color on map -->
    <color name="route_line_color_default">#00F</color>
    <color name="route_text_color_default">@android:color/black</color>

    <!-- Arrival times header -->
    <color name="header_text_color">@android:color/white</color>
    <color name="header_text_faded_color">#bbffffff</color>
    <color name="header_stop_info_ontime">@color/theme_primary</color>

    <!-- Arrival time colors -->
    <color name="stop_info_scheduled_time">#777777</color>
    <color name="stop_info_ontime">@color/theme_primary</color>
    <color name="stop_info_delayed">#504caf</color>
    <color name="stop_info_early">#af504c</color>

    <!-- stop_info_occupancy_background is same as navdrawer_background_color_selected, but without transparency so it works on non-white backgrounds -->
    <color name="stop_info_occupancy_background_historical">#ededed</color>
    <color name="stop_info_occupancy_historical">@color/stop_info_scheduled_time</color>
    <color name="stop_info_occupancy_background_predicted">@color/theme_muted</color>
    <color name="stop_info_occupancy_predicted">@color/theme_primary_dark</color>
    <color name="stop_info_occupancy_background_predicted_full">#ff776f</color>
    <color name="stop_info_occupancy_predicted_full">@color/stop_info_early</color>


    <color name="stop_info_arrival_list_background">#eaeaea</color>

    <color name="realtime_indicator_fill">@android:color/transparent</color>
    <color name="realtime_indicator_line">@android:color/white</color>

    <!--Reporting-->
    <color name="light_gray">#CCCCCC</color>
    <color name="material_gray">#7F7F7F</color>
    <color name="material_background">#F9F9F9</color>
    <color name="focus">#ff8e00</color>
    <color name="alert_info">@color/theme_primary_dark</color>
    <color name="alert_text_background_error">#ff9999</color>
    <color name="alert_text_background_warning">#999900</color>
    <color name="alert_text_background_info">@color/theme_primary_dark</color>

    <color name="alert_text_color_error">#101000</color>
    <color name="alert_text_color_warning">@color/header_text_color</color>
    <color name="alert_text_color_info">@color/header_text_color</color>

    <color name="alert_icon_error">@color/stop_info_early</color>
    <color name="alert_icon_warning">#fbfb00</color>
    <color name="alert_icon_info">@color/header_text_color</color>

    <color name="tutorial_navigation">#e0dcdc</color>

    <!-- Trip details colors -->
    <color name="trip_details_passed">@color/body_text_disabled</color>
    <color name="trip_details_not_passed">@color/body_text_2</color>
    <color name="trip_details_background">@color/stop_info_arrival_list_background</color>

    <!-- Tutorials -->
    <color name="tutorial_background">#df4CAF50</color>
    <color name="tutorial_title">#deffffff</color>
    <color name="tutorial_text">#bfffffff</color>

    <!-- Trip Planning -->
    <color name="trip_plan_label">@android:color/black</color>
    <color name="trip_option_background">@color/theme_primary</color>
    <color name="trip_option_selected">@android:color/white</color>
    <color name="trip_option_icon_tint">#888</color>

    <!-- Layers -->
    <color name="layer_disabled">#FF777777</color>
    <color name="layer_bikeshare_color">#3a4677</color>

    <!-- Shortcuts -->
    <color name="shortcut_icon">@color/material_gray</color>
    <color name="shortcut_background">#dfffffff</color>

    <!-- Bikeshare marker -->
    <color name="bikeshare_small_marker_dark">#3a4677</color>
    <color name="bikeshare_small_marker_light">#46558f</color>

    <!-- Custom Zoom Button -->
    <color name="zoom_btn_drop_shadow_layer1">#20C9C9C9</color>

    <color name="zoom_btn_drop_shadow_layer2">#30BCBCBC</color>

    <color name="zoom_btn_drop_shadow_layer3">#40BCBCBC</color>

    <color name="zoom_btn_color_default">#BEFFFFFF</color>
    <color name="zoom_btn_color_pressed">#82CCCCCC</color>
    <color name="zoom_btn_color">#82CCCCCC</color>

</resources>
