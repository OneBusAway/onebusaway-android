<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ri_contact_info">

        <org.onebusaway.android.report.ui.CustomScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ri_scrollView"
            android:fillViewport="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/ri_frame_map_view"></FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ri_address_editText"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:hint="Address" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ri_search_address_button"
                        android:layout_gravity="center|right"
                        android:background="@drawable/ic_action_search" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ri_refresh_address_button"
                        android:layout_gravity="center|right"
                        android:visibility="gone"
                        android:background="@drawable/ic_action_navigation_refresh" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ri_contents"></LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ri_custom_info_layout"></LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ri_report_stop_problem"></LinearLayout>

            </LinearLayout>

        </org.onebusaway.android.report.ui.CustomScrollView>
    </RelativeLayout>
</LinearLayout>
