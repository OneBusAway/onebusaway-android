<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/HeaderItem"
                android:id="@+id/arrivals_list_header"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="vertical">

    <ImageButton
            android:id="@+id/stop_favorite"
            android:src="@drawable/ic_action_not_important"
            android:contentDescription="@string/stop_info_favorite"
            android:background="@drawable/selectable_background_busbot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="35dp"
            android:maxHeight="35dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

    <LinearLayout
            android:id="@+id/edit_name_container"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
        <!--  NOTE: I'm sure there's a way to have a textview
          switch between displaying itself as an edittext
          and a regular text, but this method will be
          guaranteed to work across any release -->
        <EditText
                android:id="@+id/edit_name"
                style="@style/HeaderText"
                android:textCursorDrawable="@null"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:gravity="center">

            <Button
                    android:id="@+id/edit_name_cancel"
                    style="@style/Header2Text"
                    android:text="@string/stop_info_cancel"
                    android:layout_height="wrap_content"
                    android:layout_width="0dip"
                    android:layout_weight="1"/>

            <Button
                    android:id="@+id/edit_name_save"
                    style="@style/Header2Text"
                    android:text="@string/stop_info_save"
                    android:layout_height="wrap_content"
                    android:layout_width="0dip"
                    android:layout_weight="1"/>

            <Button
                    android:id="@+id/edit_name_revert"
                    style="@style/Header2Text"
                    android:text="@string/stop_info_clear"
                    android:layout_height="wrap_content"
                    android:layout_width="0dip"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/stop_details_container"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/stop_favorite"
            android:layout_toLeftOf="@+id/right_margin_separator">

        <RelativeLayout
                android:id="@+id/name_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/arrivals_header_pad_left">

            <LinearLayout
                    android:id="@+id/stop_name_and_info_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                <TextView
                        android:id="@+id/stop_name"
                        style="@style/HeaderText"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight=".95"/>

                <ImageButton
                        android:id="@+id/stop_info_button"
                        android:background="@drawable/selectable_background_busbot"
                        android:src="@drawable/ic_stop_info"
                        android:contentDescription="@string/stop_info_button_content_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="2dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".05"
                        android:paddingTop="3dp"
                        android:minWidth="23dp"
                        android:maxWidth="23dp"
                        android:minHeight="23dp"
                        android:maxHeight="23dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/routeIds"
                    style="@style/Header3Text"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_below="@id/stop_name_and_info_container"
                    android:includeFontPadding="false"/>

            <TextView
                    android:id="@+id/direction"
                    style="@style/Header3Text"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_below="@id/routeIds"
                    android:includeFontPadding="false"/>
        </RelativeLayout>

    </RelativeLayout>

    <View
            android:id="@+id/right_margin_separator"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/right_margin_container1"
            android:background="@android:color/white"/>

    <!-- Layout container for arrow and distance to stop. Two right_margin_container layouts are
         used to avoid shifting of UI elements when cross-fading between arrow/distance to stop
         views and arrival info views -->
    <LinearLayout
            android:id="@+id/right_margin_container1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:layout_marginLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

        <org.onebusaway.android.view.ArrowView
                android:id="@+id/arrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

        <org.onebusaway.android.view.DistanceToStopView
                android:id="@+id/dist_to_stop"
                style="@style/Header3Text"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>
    </LinearLayout>

    <!-- Layout container for arrival info. Two right_margin_container layouts are
         used to avoid shifting of UI elements when cross-fading between arrow/distance to stop
         views and arrival info views -->
    <LinearLayout
            android:id="@+id/right_margin_container2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:layout_marginLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

        <ImageView
                android:id="@+id/header_bus_icon"
                android:src="@drawable/ic_bus_white"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxWidth="25dp"
                android:maxHeight="25dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:visibility="gone"/>
        <TextView
                android:id="@+id/header_arrival_info"
                style="@style/Header3Text"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>
    </LinearLayout>

    <ProgressBar
            android:id="@+id/header_loading_spinner"
            style="?android:progressBarStyleLarge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:visibility="visible"/>

    <LinearLayout
            android:id="@+id/filter_group"
            style="@style/Header2Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

        <TextView
                android:id="@+id/filter"
                style="@style/Header2Text"
                android:paddingLeft="@dimen/arrivals_header_pad_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/show_all"
                android:text="@string/stop_info_filter_showall"
                style="@style/Header2Text"
                android:paddingLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:linksClickable="true"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/expand_collapse"
            android:src="@drawable/ic_action_expand_edited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>
