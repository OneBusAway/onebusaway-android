<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Navigation Drawer -->
    <style name="NavDrawerListItem" parent="style/Widget.AppCompat.ListView.Menu">
        <item name="android:background">@drawable/navdrawer_item_selectable</item>
        <item name="android:shape">oval</item>
    </style>

    <!-- Floating Action Button (FAB) style is only applied on Android 5.0 and greater-->
    <style name="OneBusAway.FloatingActionButton" parent="android:style/Widget.Material.Button">
        <item name="android:background">@drawable/fab_background</item>
    </style>

    <!-- General styles -->
    <style name="HeaderItem">
        <item name="android:background">@color/theme_primary</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="HeaderList">
        <item name="android:headerDividersEnabled">false</item>
    </style>
    <style name="ListItem">
        <item name="android:padding">10sp</item>
    </style>
    <style name="HeaderText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Header2Text">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Header3Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Line1Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Line2Text">
    </style>
    <style name="LoadingProgress" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:paddingRight">5sp</item>
    </style>
    <style name="LoadingText">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ListHintText">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">18sp</item>
    </style>

    <!-- Form styles -->
    <style name="FormLabel">
        <item name="android:paddingTop">8sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Alert list -->
    <style name="AlertListItem">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:minHeight">42dp</item>
    </style>

    <!-- StopInfo -->
    <style name="StopInfoRoute">
        <item name="android:textSize">36sp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
    <style name="StopInfoDestination">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="StopInfoTime">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="StopInfoStatus">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="StopInfoEta">
        <item name="android:textSize">36sp</item>
    </style>
    <style name="LoadMoreArrivals">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/load_more_arrivals_button</item>
    </style>

    <!--  RouteInfo -->
    <style name="RouteInfoShortName">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="RouteInfoLongName">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="RouteInfoAgency">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="FindSearchBox">
        <item name="android:background">@drawable/ab_stacked_solid_busbot</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
    </style>

    <!-- Problem reporting forms -->
    <style name="ReportProblemForms">
        <item name="android:background">@android:color/background_light</item>
    </style>
</resources>
