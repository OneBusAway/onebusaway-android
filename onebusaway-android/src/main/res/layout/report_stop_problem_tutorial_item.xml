<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rsp_imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/rsp_textView"
        android:layout_below="@+id/rsp_imageView"
        android:layout_marginTop="@dimen/report_issue_margin"
        android:layout_marginLeft="@dimen/report_issue_margin"
        android:layout_marginRight="@dimen/report_issue_margin"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_weight="6" />
</LinearLayout>