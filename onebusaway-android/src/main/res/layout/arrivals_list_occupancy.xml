<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/occupancy"
    style="@style/ArrivalsListStatusSmallStyleA"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/arrival_style_b_status_min_width"
    android:background="@drawable/occupancy_background"
    android:contentDescription="@string/occupancy_description">

    <ImageView
        android:id="@+id/occupancy1"
        android:layout_width="@dimen/occupancy"
        android:layout_height="@dimen/occupancy"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/occupancy2"
        app:srcCompat="@drawable/ic_occupancy"
        android:tint="@color/stop_info_occupancy" />

    <ImageView
        android:id="@+id/occupancy2"
        android:layout_width="@dimen/occupancy"
        android:layout_height="@dimen/occupancy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/occupancy1"
        app:layout_constraintEnd_toStartOf="@id/occupancy3"
        android:layout_marginStart="@dimen/occupancy_margin"
        android:layout_marginLeft="@dimen/occupancy_margin"
        app:srcCompat="@drawable/ic_occupancy"
        android:tint="@color/stop_info_occupancy" />

    <ImageView
        android:id="@+id/occupancy3"
        android:layout_width="@dimen/occupancy"
        android:layout_height="@dimen/occupancy"
        android:layout_marginStart="@dimen/occupancy_margin"
        android:layout_marginLeft="@dimen/occupancy_margin"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/occupancy2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_occupancy"
        android:tint="@color/stop_info_occupancy" />

    <!-- Below view is a placeholder to keep the dimensions of occupancy the same as status -->
    <include
        android:id="@+id/status"
        layout="@layout/arrivals_list_tv_template_style_a_status_small"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible" />
</androidx.constraintlayout.widget.ConstraintLayout>