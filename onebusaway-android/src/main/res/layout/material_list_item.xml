<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="72dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

        <LinearLayout
                android:id="@+id/rtl_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
        >

            <ImageView
                    android:id="@+id/rtl_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:maxHeight="40dp"
                    android:maxWidth="40dp"
                    style="@style/MaterialSmallIcon"
            />

        </LinearLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rtl_list"
                android:layout_toEndOf="@+id/rtl_list"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">


            <TextView
                    android:id="@+id/rtl_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Line1Text"
                    android:text="Title"/>

            <TextView
                    android:id="@+id/rtl_desc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rtl_title"
                    style="@style/Line2Text"
                    android:layout_marginTop="1dip"
                    android:text="Desc"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>