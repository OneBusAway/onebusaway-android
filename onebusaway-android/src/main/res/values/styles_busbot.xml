<resources>
    <style name="Theme.BusBot" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_busbot</item>
        <item name="popupMenuStyle">@style/busbot_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/busbot_DropDownListView</item>
        <item name="actionBarTabStyle">@style/busbot_ActionBarTabStyle</item>
        <item name="actionDropDownStyle">@style/busbot_DropDownNav</item>
        <item name="actionBarStyle">@style/busbot_solid_ActionBar</item>

        <!-- From http://android-holo-colors.com/ -->
        <!-- Color: #60b52b -->
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_holo_light</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_holo_light</item>
    </style>

    <style name="busbot_solid_ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/oba_dark_green</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_busbot</item>
        <item name="backgroundSplit">@color/oba_dark_green</item>
        <item name="progressBarStyle">@style/busbot_ProgressBar</item>
        <item name="titleTextStyle">@style/TitleBarTextColor</item>

        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>
        <item name="android:background">@color/oba_dark_green</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_busbot</item>
        <item name="android:backgroundSplit">@color/oba_dark_green</item>
        <item name="android:progressBarStyle">@style/busbot_ProgressBar</item>
    </style>

    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="busbot_transparent_ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_busbot</item>
        <item name="progressBarStyle">@style/busbot_ProgressBar</item>

        <item name="android:background">@drawable/ab_transparent_busbot</item>
        <item name="android:progressBarStyle">@style/busbot_ProgressBar</item>
    </style>

    <style name="busbot_PopupMenu" parent="@style/Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_busbot</item>
    </style>

    <style name="busbot_DropDownListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_busbot</item>
    </style>

    <style name="busbot_ActionBarTabStyle" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_busbot</item>

        <item name="android:background">@drawable/tab_indicator_ab_busbot</item>
    </style>

    <style name="busbot_DropDownNav"
           parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_busbot</item>

        <item name="android:background">@drawable/spinner_background_ab_busbot</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_busbot</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_busbot</item>
    </style>

    <!-- Exact equivalent is not available in AppCompat library
    <style name="busbot_ProgressBar" parent="@style/Widget.AppCompat.Light.ProgressBar.Horizontal"> -->
    <style name="busbot_ProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_busbot</item>
    </style>

</resources>